<?xml version="1.0"?>
<!--suppress WebProperties, WebProperties, ServletWithoutMappingInspection -->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <servlet>
        <servlet-name>Portlet</servlet-name>
        <servlet-class>ua.com.controllers.impl.MainPortlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Portlet</servlet-name>
        <url-pattern>/WEB-INF/jsp</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/springBean.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>