<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="ua.com.servicebuilder">
    <author>Yevdokymenko Nikita</author>
    <namespace>Portlet</namespace>

    <entity name="Department" table="tbl_departments" local-service="true" remote-service="false"
            data-source="anotherDataSource" session-factory="anotherSessionFactory">
        <column name="id" type="long" primary="true" id-type="increment" db-name="id_department"/>
        <column name="name" type="String" db-name="name"/>
        <order by="asc">
            <order-column name="id"/>
        </order>
        <finder name="Name" return-type="Department">
            <finder-column name="name"/>
        </finder>
    </entity>

    <entity name="Employee" table="tbl_employees" local-service="true" remote-service="false"
            data-source="anotherDataSource" session-factory="anotherSessionFactory">
        <column name="id" type="long" primary="true" id-type="increment" db-name="id_employee"/>
        <column name="name" type="String" db-name="name"/>
        <column name="surname" type="String" db-name="surname"/>
        <column name="hireDate" type="String" db-name="hire_date"/>
        <column name="email" type="String" db-name="email"/>
        <column name="salary" type="int" db-name="salary"/>
        <column name="departmentId" type="long" db-name="id_department"/>
        <order by="asc">
            <order-column name="id"/>
        </order>
        <finder name="DepartmentId" return-type="Collection">
            <finder-column name="departmentId"/>
        </finder>
        <finder name="Email" return-type="Employee">
            <finder-column name="email"/>
        </finder>
    </entity>
</service-builder>